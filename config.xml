<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
    xmlns:gap   = "http://phonegap.com/ns/1.0"
    id          = "com.lucasvamaral.colors"
    versionCode = "10"
    version     = "1.0.5" >

    <!-- all platforms -->
    <preference name="phonegap-version" value="cli-6.5.0" />
    <preference name="fullscreen" value="true" />
    <plugin name="cordova-plugin-splashscreen" spec="~4.0.3" />
    <preference name="SplashScreenDelay" value="1000" />
    <preference name="Orientation" value="portrait"/>
    <preference name="Fullscreen" value="true"/>

   <!-- ios -->
    <platform name="ios">
      <preference name="DisallowOverscroll" value="true"/>
      <preference name="DisallowUnderscroll" value="true"/>
      <preference name="signing-key" title="Colors" />
    </platform>

    <icon src="icon.png" />
    <splash src="splash.png" />

    <!-- iPhone 6 / 6+ -->
    <icon src="icon/icon-60@3x.png" platform="ios" width="180" height="180" />

    <!-- iPhone / iPod Touch  -->
    <icon src="icon/icon-60.png" platform="ios" width="60" height="60" />
    <icon src="icon/icon-60@2x.png" platform="ios" width="120" height="120" />

    <!-- iPad -->
    <icon src="icon/icon-76.png" platform="ios" width="76" height="76" />
    <icon src="icon/icon-76@2x.png" platform="ios" width="152" height="152" />

    <!-- Settings Icon -->
    <icon src="icon-small.png" platform="ios" width="29" height="29" />
    <icon src="icon-small@2x.png" platform="ios" width="58" height="58" />
    <icon src="icon-small@3x.png" platform="ios" width="87" height="87" />

    <!-- Spotlight Icon -->
    <icon src="icon-40.png" platform="ios" width="40" height="40" />
    <icon src="icon-40@2x.png" platform="ios" width="80" height="80" />
    <icon src="icon-40@3x.png" platform="ios" width="120" height="120" />
    <icon src="icon-83.5@2x.png" platform="ios" width="167" height="167" />

    <!-- SPLASH  -->

    <!-- iPhone and iPod touch -->
    <splash src="splash/Default.png" platform="ios" width="320" height="480" />
    <splash src="splash/Default@2x.png" platform="ios" width="640" height="960" />

    <!-- iPhone 5 / iPod Touch (5th Generation) -->
    <splash src="splash/Default-568h@2x.png" platform="ios" width="640" height="1136" />

    <!-- iPhone 6 -->
    <splash src="splash/Default-667h@2x.png" platform="ios" width="750" height="1334" />
    <splash src="splash/Default-Portrait-736h@3x.png" platform="ios" width="1242" height="2208" />

    <!-- iPad -->
    <splash src="splash/Default-Portrait.png" platform="ios" width="768" height="1024" />

    <!-- Retina iPad -->
    <splash src="splash/Default-Portrait@2x.png" platform="ios" width="1536" height="2048" />

  <name>Colors</name>

  <description>
      A relaxing puzzle game.
  </description>

  <author href="http://www.lucasvamaral.com/" email="lucas.v.amaral@gmail.com">
      Lucas Amaral
  </author>



</widget>
